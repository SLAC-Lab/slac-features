<?php

/**
 * Implements hook_install().
 */
function slac_news_pages_install() {
  $nodes = array(
    (object) array(
      'title' => t('News and Press Releases'),
      'type' => 'landing_page',
      'language' => 'und',
      'name' => 'admin',
      'uid' => 1,
      'path' => array(
        'alias' => 'news',
        'pathauto' => 0,
      ),
    ),
    (object) array(
      'title' => t('News Articles'),
      'type' => 'landing_page',
      'language' => 'und',
      'name' => 'admin',
      'uid' => 1,
      'path' => array(
        'alias' => 'news/news-article',
        'pathauto' => 0,
      ),
    ),
    (object) array(
      'title' => t('Press Releases'),
      'type' => 'landing_page',
      'language' => 'und',
      'name' => 'admin',
      'uid' => 1,
      'path' => array(
        'alias' => 'news/press-release',
        'pathauto' => 0,
      ),
    ),
  );

  foreach ($nodes as $node) {
    node_save($node);

    $panels_display = _slac_news_pages_install__panels_display();

    _slac_news_pages_install__panelizer_entity($node, $panels_display['did']);

    _slac_news_pages_install__panes($panels_display['did']);

    switch ($node->path['alias']) {
      case 'news':
        _slac_news_pages_install__menu_item($node->nid, t('News'), 'main-menu', 2);
        _slac_news_pages_install__menu_item($node->nid, t('All News'), 'menu-news-menu', 1);
        break;
      case 'news/news-article':
        _slac_news_pages_install__menu_item($node->nid, $node->title, 'menu-news-menu', 2);
        break;
      case 'news/press-release':
        _slac_news_pages_install__menu_item($node->nid, $node->title, 'menu-news-menu', 3);
        break;
      default:
        break;
    }
  }
}

/**
 * Create panels display.
 */
function _slac_news_pages_install__panels_display() {
  $panels_display = array(
    'layout' => 'two_col',
    'layout_settings' => array(),
    'panel_settings' => array(
      'style_settings' => array (
        'default' => NULL,
        'center' => NULL,
        'left' => NULL,
        'right' => NULL,
      ),
    ),
    'title' => '%node:title',
    'hide_title' => 0,
    'title_pane' => 0,
  );
  drupal_write_record('panels_display', $panels_display);
  return $panels_display;
}

/**
 * Create panelized entity.
 */
function _slac_news_pages_install__panelizer_entity($node, $did) {
  $panelizer_entity = array(
    'entity_type' => 'node',
    'entity_id' => $node->nid,
    'revision_id' => $node->vid,
    'name' => NULL,
    'no_blocks' => 0,
    'css_id' => '',
    'css' => '',
    'pipeline' => 'ipe',
    'context' => array(),
    'relationships' => array(),
    'did' => $did,
    'view_mode' => 'page_manager',
    'css_class' => '',
    'title_element' => 'H2',
    'link_to_entity' => 1,
    'title' => '',
    'hide_title' => 0,
    'extra' => array(),
  );
  drupal_write_record('panelizer_entity', $panelizer_entity);
  return $panelizer_entity;
}

